{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://metadata.openscan.io/schemas/donation.schema.json",
	"title": "Donation",
	"description": "Record of a donation to OpenScan",
	"type": "object",
	"required": ["from", "amount", "transaction"],
	"properties": {
		"from": {
			"type": "string",
			"description": "Donor address or ENS name"
		},
		"amount": {
			"type": "string",
			"description": "Donation amount with token symbol (e.g., '0.1 ETH', '100 USDC')"
		},
		"transaction": {
			"type": "string",
			"pattern": "^0x[a-fA-F0-9]{64}$",
			"description": "Transaction hash"
		},
		"chainId": {
			"type": "integer",
			"description": "Chain ID where the donation was made"
		},
		"message": {
			"type": "string",
			"maxLength": 500,
			"description": "Optional message from the donor"
		},
		"date": {
			"type": "string",
			"format": "date",
			"description": "Date of the donation (YYYY-MM-DD)"
		}
	},
	"additionalProperties": false
}
